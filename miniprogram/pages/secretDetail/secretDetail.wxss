page{
  background-color: rgba(200, 200, 200, 0.6);
}
.secretCard{
  position: relative;
  background-color: rgb(80, 80, 80);
  width: 86vw;
  margin: 5px 5vw 30px 5vw;
  padding: 2vw;
  /* box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 3px 10px 0 rgba(0, 0, 0, 0.19); */
  border-radius: 10px;
}
.author{
  width: 100%;
  height: 28px;
}
.author > view{
  width: 90%;
  padding: 0px 5%;
  height: 28px;
  font-size: 20px;
  text-align: center;
  line-height: 28px;
  font-family: '楷体';
  color: white;
}
.time{
  width: 90%;
  padding: 0px 5%;
  color: white;
  font-size: 16px;
  font-family: '隶书';
  text-align: center;
  line-height: 24px;
  margin: 0px;
}
.content{
  width: 90%;
  padding: 0px 5%;
  color: white;
  font-size: 20px;
  line-height: 30px;
  margin: 10px 0px 20px 0px;
}
.attitude{
  width: 90vw;
  height: 40px;
  padding: 4px 0px;
  display: flex;
  background-color: white;
  margin-left: -2vw;
}
.likeComm{
  height: 24px;
  margin: 6px 5px 2px 15px;
}
.likeComm image{
  width: 24px;
  height: 24px;
  float: left;
}
.likeComm view{
  height: 24px;
  line-height: 24px;
  font-size: 20px;
  font-family: '隶书';
  margin-left: 10px;
  float: left;
}
.comment{
  width: 90vw;
  background-color: white;
  border-radius: 0px 0px 10px 10px;
  margin: 0px 0px -2vw -2vw;
  display: flex;
  flex-wrap: wrap-reverse;
}
.noComment{
  width: 86vw;
  height: 30px;
  font-size: 18px;
  line-height: 30px;
  color: gray;
  padding: 3px 2vw;
  border-top: 0.5px solid rgb(180, 180, 180);
}
.comentBlock{
  width: 86vw;
  font-size: 18px;
  line-height: 28px;
  color: black;
  padding: 3px 2vw;
  border-top: 0.5px solid rgb(180, 180, 180);
}
.comContent{
  width: 90%;
  padding: 0px 5%;
  color: white;
  font-size: 18px;
  line-height: 26px;
  margin: 5px 0px 10px 0px;
}

.commentDown{
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100vw;
  height: 100vh;
  z-index: 1;
}
.sendCom{
  position: fixed;
  left: 0px;
  bottom: 0px;
  z-index: 10;
  width: 100%;
  background-color: white;
  border-top: 0.5px solid rgba(215, 215, 215, 0.9);
}
.comContent1{
  position: relative;
  width: 90vw;
  height: 36px;
  margin: 10px 5vw;
}
.comContent1 > textarea{
  position: absolute;
  left: 3vw;
  bottom: 0px;
  padding: 5px 2vw;
  width: 80vw;
  height: 26px;
  font-size: 16px;
  line-height: 26px;
  border-radius: 3px;
  color: gray;
  background-color: rgba(220, 220, 220, 0.8);
}
.comContent0{
  width: 90vw;
  margin: 10px 5vw;
}
.comContent0 > textarea{
  padding: 5px 2vw;
  width: 86vw;
  height: 26px;
  font-size: 18px;
  line-height: 26px;
  border-radius: 3px;
  background-color: rgba(220, 220, 220, 0.8);
}
.sendNav{
  width: 100%;
  height: 35px;
  margin-top: 10px;
  display: flex;
}
.sendNav > view{
  width: 100px;
  height: 35px;
  font-size: 18px;
  font-family: '楷体';
  line-height: 35px;
  text-align: center;
}
.sendNav > switch{
  margin-left: 10px;
  height: 35px;
}
.sendNav > button{
  margin-left: 20vw;
  padding: 0px;
  width: 50px;
  height: 35px;
  font-size: 16px;
  line-height: 35px;
  background-color: lightblue;
}
button[size='mini']{
  padding: 0px;
  line-height: 35px;
}