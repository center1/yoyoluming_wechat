.textarea{
  width: 100vw;
  height: 60vw;
  margin-bottom: 5px;
  background-color: rgba(230, 230, 230,0.6);
}
.textarea textarea{
  padding: 3vw;
  width: 94%;
  height: 54vw;
}
.state{
  width: 98vw;
  height: 24px;
  font-size: 20px;
  line-height: 24px;
  padding-right: 10px;
  margin: 5px 2vw 10px 0px;
  text-align: right;
  font-family: '楷体';
  color: rgb(100, 100, 100);
}
.groupImg{
  width: 96vw;
  margin-left: 2vw;
}
.img{
  position: relative;
  width: 30vw;
  height: 30vw;
  margin: 1vw;
  float: left;
}
.loading{
  position: absolute;
  top: 0px;
  right: 0px;
  width: 30vw;
  height: 30vw;
  background-color: white;
}
.loading image{
  width: 100%;
  height: 100%;
}
.imgx{
  position: absolute;
  top: 0px;
  right: 0px;
  width: 25px;
  height: 25px;
  background-color: rgba(255, 0, 0, 0.5);
  color: white;
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  line-height: 25px;
  z-index: 1;
}
.img image{
  width: 100%;
  height: 100%;
}
.btn{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 20vw;
  background-color: rgba(220, 220, 220, 0.7);
  box-shadow: 0px -0.5px 0.5px gray;
}
.btn button{
  width: 60vw;
  height: 12vw;
  margin-top: 4vw;
}