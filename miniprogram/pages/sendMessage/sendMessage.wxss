.people{
  width: 90%;
  height: 60px;
  margin: 10px 5%;
}
.people > view:nth-child(1){
  width: 100%;
  height: 30px;
  font-size: 20px;
  line-height: 30px;
  font-weight: bold;
}
.people > view:nth-child(2){
  width: 100%;
  height: 30px;
  font-size: 20px;
  line-height: 30px;
  text-indent: 1.5em;
  color: rgb(80, 80, 80);
}
.content{
  width: 90%;
  height: 180px;
  margin: 10px 5%;
}
.content > view{
  width: 100%;
  height: 30px;
  font-size: 20px;
  line-height: 30px;
  font-weight: bold;
}
.content > textarea{
  width: 100%;
  height: 150px;
  margin: 5px 0;
  font-size: 20px;
  background-color: rgba(232, 232, 255, 0.8);
}
.btn{
  width: 100%;
  height: 50px;
  margin: 20px 0px;
}