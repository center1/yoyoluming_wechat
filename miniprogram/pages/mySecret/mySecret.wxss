page{
  background-color: rgba(230, 230, 230, 0.7);
}
.none{
  width: 100%;
  height: 30px;
  font-size: 20px;
  text-align: center;
  line-height: 30px;
  color: rgb(60, 60, 60);
}

.secretcard{
  position: relative;
  width: 90vw;
  margin: 10px 3vw;
  padding: 3px 2vw;
  background-color: white;
  box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.2), 0 2px 8px 0 rgba(0, 0, 0, 0.19);
  border-radius: 5px;
}
.delete{
  position: absolute;
  top: 8px;
  right: 10px;
  width: 25px;
  height: 25px;
}
.delete > image{
  width: 100%;
  height: 100%;
}
.time{
  width: 100%;
  height: 26px;
  font-size: 16px;
  font-family: '隶书';
  line-height: 26px;
  color: gray;
  margin-bottom: 5px;
}
.content{
  width: 100%;
  font-size: 20px;
  font-family: '楷体';
  line-height: 30px;
  margin-bottom: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.tip{
  width: 100%;
  height: 28px;
  font-size: 18px;
  line-height: 28px;
  color: rgb(120, 120, 120);
  margin-bottom: 5px;
}

.uploadMore{
  background-color: white;
  width: 90vw;
  height: 22px;
  margin: 0px 3vw 5px 3vw;
  padding: 5px 2vw;
  box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.2), 0 2px 8px 0 rgba(0, 0, 0, 0.19);
  border-radius: 5px;
  font-size: 16px;
  text-align: center;
  line-height: 22px;
  color: gray;
}
.toBottom{
  width: 90vw;
  height: 22px;
  margin: 0px 3vw 5px 3vw;
  padding: 5px 2vw;
  font-size: 16px;
  text-align: center;
  line-height: 22px;
  color: black;
}