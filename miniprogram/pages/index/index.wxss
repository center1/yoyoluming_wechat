page{
  background-color: rgba(172, 255, 47, 0.7);
}
#upload{
  position: fixed;
  top: 0px;
  width: 100%;
  height: 14vw;
  background-color: white;
}
.head{
  width: 12vw;
  height: 12vw;
  margin: 1vw;
  float: left;
}
.head image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(230, 230, 230, 0.7);
}
.input{
  width: 80vw;
  height: 12vw;
  margin: 1vw 3vw 1vw 3vw;
  float: left;
}
.input input{
  width: 100%;
  height: 100%;
  border-radius: 6vw;
  background-color: rgba(230, 230, 230, 0.7);
}
#moodContent{
  margin-top: 14vw;
  width: 100vw;
  display: flex;
  flex-wrap: wrap-reverse;
}
.moodcard{
  background-color: white;
  width: 82vw;
  margin: 5px 5vw 20px 5vw;
  padding: 4vw;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  border-radius: 20px;
}
/* 解决子元素的 margin-top 被该父元素抢去的问题 */
.moodcard::before{
  content: '';
  display: table;
}
.author{
  width: 82vw;
  height: 40px;
  margin: 0 0 5px 0;
}
.author view:nth-child(1){
  width: 40px;
  height: 40px;
  border-radius: 50%;
  float: left;
}
.author view:nth-child(1) image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.author view:nth-child(2){
  height: 40px;
  width: 42vw;
  margin-left: 20px;
  font-size: 20px;
  line-height: 40px;
  float: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.author view:nth-child(3){
  width: 30px;
  height: 30px;
  float: right;
}
.author view:nth-child(3) image{
  width: 100%;
  height: 100%;
}
.time{
  width: 82vw;
  height: 20px;
  margin: 5px 0 5px 0;
  font-size: 15px;
  font-family: '隶书';
  line-height: 20px;
  color: gray;
}
.content{
  width: 82vw;
  margin: 5px 0 10px 0;
  font-size: 24px;
  font-family: '楷体';
  line-height: 30px;
}
.img{
  width: 82vw;
  margin: 5px 0 10px 0;
}
.img1_width{
  width: 82vw;
  height: auto;
}
.img1_width image{
  width: 82vw;
  height: auto;
}
.img1_height{
  height: 82vw;
  width: auto;
}
.img1_height image{
  height: 82vw;
  width: auto;
}
.img2{
  width: 40vw;
  height: 40vw;
  margin: 1vw 1vw 1vw 0;
}
.img2Group{
  display: flex;
  flex-wrap: wrap;
}
.img2 image{
  width: 100%;
  height: 100%;
}
.img3{
  width: 26vw;
  height: 26vw;
  margin: 1vw 1vw 1vw 0;
}
.img3Group{
  display: flex;
  flex-wrap: wrap;
}
.img3 image{
  width: 100%;
  height: 100%;
}
.attitude{
  width: 82vw;
  height: 30px;
  margin: 5px 0 5px 0;
  display: flex;
}
.likeComm{
  width: 22vw;
  height: 26px;
  margin: 2px 10px 2px 5px;
}
.likeComm image{
  width: 26px;
  height: 26px;
  float: left;
}
.likeComm view{
  height: 26px;
  line-height: 26px;
  font-size: 24px;
  margin-left: 15px;
  float: left;
}