page{
  background: white;
}
.question{
  width: 100%;
  height: 40px;
  font-size: 22px;
  font-weight: bold;
  font-family: '微软雅黑';
  line-height: 40px;
  padding-left: 5px;
  margin-bottom: 5px;
}
.answer{
  width: 100%;
  height: 40px;
  font-size: 22px;
  font-family: '楷体';
  line-height: 40px;
  padding-left: 10px;
  margin-bottom: 5px;
  background-color: rgba(255, 245, 238, 0.75);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
textarea{
  width: 100%;
  height: 160px;
  font-size: 22px;
  font-family: '楷体';
  line-height: 40px;
  padding-left: 10px;
  margin-bottom: 25px;
  background-color: rgba(255, 245, 238, 0.75);
}
.btn{
  width: 100%;
  height: 40px;
}