page{
  background-color: rgba(230, 230, 230, 0.7);
  /* background-color: white; */
}
.head_name{
  height: 15vw;
  width: 100%;
  margin: 10px 0;
  border-bottom-left-radius: 50vw;
  position: relative;
}
.head_name:after {
    background-color: greenyellow;
    content: '';
    width: 400vw;
    height: 400vw;
    position: absolute;
    left: -150vw;
    top:-379vw;
    z-index: -1;
    border-radius: 50%;
    box-shadow: inset 3px 3px 6px #000;
}
.head{
  width: 15vw;
  height: 15vw;
  margin-left: 10px;
  border-radius: 50%;
  float: left;
  background-color: ghostwhite;
}
.head > image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.name{
  height: 15vw;
  width: 70vw;
  line-height: 15vw;
  font-size: 22px;
  margin-left: 20px;
  float: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.name > button{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  line-height: 15vw;
  font-size: 22px;
  padding-left: 20px;
  font-family: '黑体';
  text-align: left;
}

.other{
  width: 100%;
  margin-top: 8vw;
  font-size: 20px;
  line-height: 40px;
  font-family: '楷体';
}
.other > view{
  position: relative;
  background-color: ghostwhite;
  width: 100%;
  height: 40px;
  border-bottom: 1px solid rgba(200, 200, 200, 0.8);
  padding-left: 20px;
}
.other > view::after{
  content: '>';
  font-size: 20px;
  line-height: 40px;
  float: right;
  margin-right: 34px;
  color: rgb(150, 150, 150);
}
.redCircle{
  position: absolute;
  right: 65px;
  top: 15px;
  width: 10px;
  height: 10px;
  background-color: red;
  border-radius: 50%;
}

#popList{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(200, 200, 200, 0.7);
}
.theList{
  width: 80vw;
  height: 80vh;
  margin: 10vh 10vw;
  background-color: white;
}
.nav{
  width: 100%;
  height: 6vh;
  background-color: lightblue;
}
.nav > view:nth-child(1){
  width: 65vw;
  height: 6vh;
  float: left;
  font-size: 3vh;
  text-align: center;
  line-height: 6vh;
}
.nav > view:nth-child(2){
  width: 6vh;
  height: 6vh;
  float: right;
  background-color: red;
  color: white;
  font-size: 4vh;
  text-align: center;
  line-height: 6vh;
}
.listFor{
  width: 100%;
  height: 72vh;
  overflow: scroll;
}
.user{
  width: 100%;
  height: 50px;
  display: flex;
  border-bottom: 0.5px solid gray;
}
.user > view:nth-child(1){
  width: 40px;
  height: 40px;
  padding: 5px;
  border-radius: 50%;
}
.user > view:nth-child(1) > image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user > view:nth-child(2){
  width: auto;
  height: 50px;
  margin-left: 10px;
  font-size: 18px;
  line-height: 50px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}