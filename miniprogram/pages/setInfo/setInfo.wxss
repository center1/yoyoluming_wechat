/* 整体页面样式 */
page{
  background-color: rgba(230, 230, 230, 0.7);
}
.notice{
  width: 90vw;
  height: 16vw;
  padding: 0 5vw;
  margin-bottom: 15px;
  background-color: white;
  font-size: 16px;
  line-height: 8vw;
  font-family: '微软雅黑';
  font-weight: bold;
}
.group_head{
  width: 100%;
  height: 18vw;
  margin-bottom: 15px;
  background-color: white;
}
.group_head view:nth-child(1){
  width: 20vw;
  height: 18vw;
  margin-left: 15px;
  float: left;
  font-family: '隶书';
  font-size: 20px;
  line-height: 18vw;
  color: rgb(100, 100, 100);
}
.group_head view:nth-child(2){
  width: 18vw;
  height: 18vw;
  margin-right: 20px;
  float: right;
  border-radius: 50%;
}
.group_head view:nth-child(2) image{
  width: 16vw;
  height: 16vw;
  margin: 1vw;
  border-radius: 50%;
}

.group{
  width: 100%;
  margin-top: 15px;
  background-color: white;
}
.group view:nth-child(1){
  /* width: 100%; */
  height: 9vw;
  margin-left: 15px;
  font-family: '隶书';
  font-size: 20px;
  line-height: 9vw;
  color: rgb(100, 100, 100);
}
.group view:nth-child(2){
  margin-left: 15px;
  padding: 0px 5px;
  font-family: '宋体';
  font-size: 20px;
  line-height: 9vw;
  color: black;
}

/* 弹出的输入文本框样式 */
#textarea{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(200, 200, 200, 0.7);
}
.textarea{
  width: 80vw;
  height: 40vh;
  margin: 28vh 10vw;
  background-color: white;
}
.textarea .top{
  width: 100%;
  height: 5vh;
  background-color: lightblue;
}
.textarea .top view{
  width: 5vh;
  height: 5vh;
  float: right;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 5vh;
}
.textarea .content{
  width: 100%;
  height: 7vh;
  line-height: 7vh;
  font-size: 22px;
  padding-left: 10px;
}
.textarea .bottom{
  width: 100%;
  height: 18vh;
}
.textarea .bottom textarea{
  width: 96%;
  height: 18vh;
  margin-left: 2%;
  /* border: 1px solid rgba(200, 200, 200, 0.8); */
  margin-bottom: 2vh;
  background-color: rgba(255, 245, 226, 0.9);
  font-size: 20px;
}
.textarea .bottom .button{
  width: 100%;
  height: 8vh;
}

/* 点击头像后的选项样式 */
#head{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(200, 200, 200, 0.7);
}
.place{
  width: 100%;
  height: 65vh;
}
.headChoose{
  width: 100%;
  height: 35vh;
  background-color: rgb(230, 230, 230);
}
.headChoose view{
  width: 100%;
  height: 8vh;
  border-bottom: 1px solid rgba(200, 200, 200, 0.8);
  text-align: center;
  line-height: 8vh;
  font-size: 20px;
  font-family: "微软雅黑";
  background-color: white;
}
.headChoose .cancel{
  position: absolute;
  bottom: 0px;
}