page{
  background-color: rgba(210, 210, 210, 0.7);
}
.login{
  width: 90vw;
  margin: 5px 3vw;
  padding: 5px 2vw;
}
.title{
  width: 100%;
  height: 30px;
  font-size: 20px;
  text-align: center;
  line-height: 30px;
  color: rgb(0, 170, 255);
}
.pass{
  width: 100%;
  height: 60px;
}
.pass > view{
  width: 100%;
  height: 28px;
  font-size: 18px;
  line-height: 28px;
  color: rgb(90, 90, 90);
  margin-bottom: 2px;
}
.pass > input{
  width: 94%;
  height: 30px;
  padding: 0px 3%;
  border-radius: 3px;
  background-color: whitesmoke;
}
.btn{
  margin-top: 20px;
}

.none{
  width: 100%;
  height: 30px;
  font-size: 20px;
  text-align: center;
  line-height: 30px;
  color: rgb(60, 60, 60);
}
.informCard{
  width: 90vw;
  margin: 5px 3vw 10px 3vw;
  padding: 5px 2vw;
  background-color: white;
  border-radius: 5px;
}
.explain{
  width: 100%;
  font-size: 18px;
  line-height: 28px;
  font-family: '楷体';
  margin: 3px 0px;
}
.watch{
  width: 100%;
  height: 30px;
  font-size: 20px;
  text-align: center;
  line-height: 30px;
  margin: 10px 0px;
  color: rgb(100, 100, 100);
}
.handleBtn{
  width: 100%;
  height: 40px;
  margin: 5px 0px;
  display: flex;
}
